<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Counter">
        <attr name="title" format="string"/>
    </declare-styleable>
    <declare-styleable name="EditTextWithTitle">
        <attr name="editTextTitle" format="string"/>
    </declare-styleable>

    <declare-styleable name="FightCounter">
        <attr name="counter_orientation" format="enum" >
            <enum name="vertical" value="0"/>
            <enum name="horizontal" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="RoundedButton">
        <attr name="android:text" format="string"/>
        <attr name="android:textSize" format="dimension"/>
    </declare-styleable>

</resources>