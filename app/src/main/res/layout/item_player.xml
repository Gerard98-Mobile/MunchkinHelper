<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linearLayout_player_container"
        android:theme="@style/Theme.MaterialComponents.DayNight"
        app:rippleColor="@android:color/transparent"
        app:cardBackgroundColor="@color/colorBackground"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/settingsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:alpha="1"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/close"
                    style="@style/MediumClickableImage"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/ic_close"/>

            <ImageView
                    android:id="@+id/user_settings"
                    style="@style/MediumClickableImage"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/user_delete"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_settings"
                    app:tint="?attr/colorControlNormal" />

            <ImageView
                    android:id="@+id/user_delete"
                    style="@style/MediumClickableImage"
                    android:layout_marginEnd="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_delete_black"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:id="@+id/mainView"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:alpha="0"
                android:alpha="1"
                android:paddingTop="13dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="13dp">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10">

                <ImageView
                        android:id="@+id/imgView_leader"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:src="@drawable/crown"
                        android:visibility="invisible"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>

                <TextView
                        android:id="@+id/txtView_playerName_item"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:text="@string/player"/>

                <TextView
                        android:id="@+id/txtView_power_item"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:text="@string/one"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/txtView_level_item"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:text="@string/one"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />


            </LinearLayout>

            <TextView
                    android:id="@+id/death_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/colorGrey"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="7dp"
                    android:textStyle="italic"
                    android:text="Liczba Å›mierci: 1"
                    android:gravity="end"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>



